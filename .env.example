# TraderAgent Elite - Environment Variables Template
# Copy this file to .env and fill in your values

# ==============================================
# REQUIRED - Database Configuration
# ==============================================
DATABASE_URL=postgresql://user:password@localhost:5432/traderagent

# ==============================================
# REQUIRED - Application Configuration
# ==============================================
NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# ==============================================
# REQUIRED - OpenAI API (for AI features)
# ==============================================
OPENAI_API_KEY=sk-your-openai-api-key-here

# ==============================================
# OPTIONAL - Session Configuration
# ==============================================
SESSION_SECRET=your-very-long-random-session-secret-here

# ==============================================
# OPTIONAL - Email Configuration (for OTP)
# ==============================================
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password

# ==============================================
# OPTIONAL - SMS Configuration (for OTP)
# ==============================================
# TWILIO_ACCOUNT_SID=your-account-sid
# TWILIO_AUTH_TOKEN=your-auth-token
# TWILIO_PHONE_NUMBER=+1234567890
